<%- include('includes/head.ejs', { title: 'Signup' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
<%- include('includes/header.ejs') %>
<main id="signup" style="text-align: center">
    <h1>Signup</h1>
    <% if(previousData.hasError) { %>
        <p id="input-error">
            <%= previousData.message %>
        </p>
    <% } %>
    <form action="/signup" method="POST">
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= previousData.email %> " required>
        </div>
        <div class="form-control">
            <label for="confirm-email">Confirm Email</label>
            <input type="email" id="confirm-email" name="confirm-email" value="<%= previousData.confirmEmail %> "
                   required>
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" value="<%= previousData.password %>" required>
        </div>
        <button class="btn">Create user</button>
    </form>
    <div id="auth-alternative">
        <a class="btn btn-alt" href="/login">Login instead</a>
    </div>
</main>
</body>

</html>