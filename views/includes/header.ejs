<header id="main-header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MessMadeEasy</a>
            <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <% if(locals.isAuth){ %>

                        <li class="nav-item">
                            <a class="nav-link" href="/attendance">Attendance</a>
                        </li>
                    <% } %>

                    <li class="nav-item dropdown">
                        <a
                                class="nav-link dropdown-toggle"
                                href=""
                                id="navbarDropdown"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                        >Menu</a
                        >
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <% for(let i = 1; i <= 6; i++){ %>
                                <li>
                                    <a class="dropdown-item" href="/hostel/<%= i %> "
                                    >Mess <%= i %>
                                    </a>
                                </li>

                            <% } %>

                            <!--                            <li>-->
                            <!--                                <hr class="dropdown-divider"/>-->
                            <!--                            </li>-->
                            <!--                            <li><a class="dropdown-item" href="">Something else here</a></li>-->
                        </ul>
                    </li>
                    <li class="nav-item">
                        <% if(locals.isAuth){ %>

                            <a class="nav-link" href="/feedback">Feedback/Complaint</a>
                    </li>
                    <% } %>

                    <li class="nav-item">
                        <a class="nav-link" href="/contact">About Us</a>
                    </li>
                    <% if(locals.isAuth){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/messChange">Mess Change Portal</a>
                        </li>
                    <% } %>
                    <% if(locals.isAuth){ %>

                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <div class="d-flex justify-content-end collapse navbar-collapse">
                <ul class="navbar-nav ml-auto mb-2 mb-lg-0 d-flex justify-content-end">
                    <% if(!locals.isAuth){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">LoginIn</a>
                        </li>
                    <% } %>
                    <% if(locals.isAuth){ %>
                        <li class="nav-item">
                            <form action="/signout" method="POST">
                                <!-- <a href="/signout" class="nav-link" onclick="signOut();">Sign out</a> -->
                                <button onclick="signOut()" class="nav-link">Signout</button>
                                <script>
                                    function signOut() {
                                        var auth2 = gapi.auth2.getAuthInstance();
                                        auth2.signOut().then(function () {
                                            console.log("User signed out.");
                                        });
                                    }
                                </script>
                            </form>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>
